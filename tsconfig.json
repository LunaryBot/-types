{
    "compileOnSave": true,
	"compilerOptions": {
		"alwaysStrict": true,
		"lib": [
            "ESNext", 
            "ESNext.BigInt", 
            "ES2020.BigInt"
        ],
		"module": "commonjs",
		"noUnusedParameters": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"noUnusedLocals": true,
		"removeComments": false,
		"target": "ES2020",
		"importsNotUsedAsValues": "error",
		"strictNullChecks": true,
		"preserveConstEnums": true,
		"exactOptionalPropertyTypes": true
	},
    "include": [
        "index.ts",
        "src/database.ts"
    ]
}